<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jung.spring.mybatis.MemberMapper">
<!-- Mapper의 패키지까지 완변하게 기술해야 한다. -->
	
	<resultMap type="jung.spring.vo.Member" id="MemberResultMap">
		<result property="id" column="ID" />
		<result property="name" column="NAME" />
		<result property="email" column="EMAIL" />
		<result property="phone" column="PHONE" />
	</resultMap>

	<!-- id의 경우에는 Mapper.java에 동일하게 사용해야된다. resultMap="MemberResultMap" -->
	<select id="getMembers" resultType="member">
		SELECT * FROM user
	</select>
	
	<select id="getUpdateMember" resultType="member" parameterType="int">
		SELECT * FROM user WHERE id = #{id}
	</select>
	
	<!-- parameterType 에는 구문에 전달될 파라미터의 패키지 경로를 포함한 전체 클래명이나 별칭이 들어간다  -->
	<insert id="insertMember" parameterType="jung.spring.vo.Member" >
		INSERT INTO user(name, email, phone) values(#{name}, #{email}, #{phone})
	</insert>
	
	<!-- update는 생략한다. -->
	<update id="updateMember" parameterType="jung.spring.vo.Member">
		UPDATE user SET name = #{name}, email = #{email}, phone = #{phone}
		WHERE id=#{id}
	</update>
	
	<delete id="deleteMember" parameterType="int">
		DELETE FROM user WHERE id=#{id}
	</delete>

</mapper>
